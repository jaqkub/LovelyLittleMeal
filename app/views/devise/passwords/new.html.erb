<div class="container d-flex justify-content-center align-items-center" style="min-height: 100dvh;">
  <div class="auth-card p-2 shadow-sm bg-white" style="max-width: 400px; width: 100%; border-radius: 12px;">

    <h2 class="mb-4 text-center">Forgot your password?</h2>

    <%= simple_form_for(resource,
                        as: resource_name,
                        url: password_path(resource_name),
                        html: { method: :post }) do |f| %>

      <%= f.error_notification %>

      <div class="form-inputs mb-3">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { 
                      autocomplete: "email",
                      class: "form-control",
                      style: "border-radius: 12px; height: 38px;"
                    } %>
      </div>

      <div class="form-actions mb-3">
        <%= f.button :submit,
                     "Send reset instructions",
                     class: "btn btn-primary w-100",
                     style: "border-radius: 12px; height: 38px;" %>
      </div>

    <% end %>

    <div class="pt-2 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
