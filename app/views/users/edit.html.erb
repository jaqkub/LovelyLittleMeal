<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <div id="user-settings-edit", class="card shadow-sm p-4" >
        <h2 class="mb-4 text-center">Edit your settings to get the best tips from the chef</h2>

        <%= form_with model: @user, url: "/settings", method: :patch do |f| %>

          <!-- Appliances as checkboxes -->
          <div class="mb-3">
            <%= f.label :appliances, "Available appliances", class: "form-label d-block" %>

            <% # Get current appliances (handle both hash and legacy formats)
               current_appliances = if @user.appliances.is_a?(Hash)
                                         @user.appliances
                                       else
                                         # Legacy format - initialize empty hash
                                         User::STANDARD_APPLIANCES.each_with_object({}) { |a, h| h[a] = false }
                                       end %>

            <% User::STANDARD_APPLIANCES.each do |appliance_key| %>
              <div class="form-check form-check-inline">
                <%= check_box_tag "user[appliances][#{appliance_key}]",
                                  1,
                                  current_appliances[appliance_key.to_s] == true || current_appliances[appliance_key.to_sym] == true,
                                  id: "user_appliances_#{appliance_key}",
                                  class: "form-check-input" %>
                <%= label_tag "user_appliances_#{appliance_key}",
                              appliance_key.tr("_", " ").split.map(&:capitalize).join(" "),
                              class: "form-check-label" %>
              </div>
            <% end %>
          </div>

          <!-- Allergies as checkboxes -->
          <div class="mb-3">
            <%= f.label :allergies, "Allergies", class: "form-label d-block" %>

            <% allergy_options = {
                 "peanut" => "Peanut",
                 "tree_nuts" => "Tree nuts",
                 "sesame" => "Sesame",
                 "shellfish" => "Shellfish",
                 "milk" => "Milk",
                 "egg" => "Egg",
                 "fish" => "Fish",
                 "wheat" => "Wheat",
                 "soy" => "Soy",
                 "kiwi" => "Kiwi"
               } %>

            <% # Get current allergies (handle both hash and legacy formats)
               current_allergies = if @user.allergies.is_a?(Hash)
                                     @user.allergies
                                   else
                                     # Legacy format - initialize empty hash
                                     User::STANDARD_ALLERGIES.each_with_object({}) { |a, h| h[a] = false }
                                   end %>

            <% allergy_options.each do |key, label| %>
              <div class="form-check form-check-inline">
                <%= check_box_tag "user[allergies][#{key}]",
                                  1,
                                  current_allergies[key.to_s] == true || current_allergies[key.to_sym] == true,
                                  id: "user_allergies_#{key}",
                                  class: "form-check-input" %>
                <%= label_tag "user_allergies_#{key}",
                              label,
                              class: "form-check-label" %>
              </div>
            <% end %>
          </div>

          <!-- Preferences -->
          <div class="mb-3">
            <%= f.label :preferences, class: "form-label" %>
            <%= f.text_area :preferences,
                            rows: 3,
                            class: "form-control",
                            placeholder: "Example: I want to always use sweetener instead of cane sugar.." %>
          </div>

          <!-- Physicals (age, weight, gender) -->
            <h5 class="mt-4 mb-2">Physical Information</h5>

            <!-- Age -->
            <div class="mb-3">
              <%= f.label :age, "Age", class: "form-label" %>
              <%= f.number_field :age,
                    class: "form-control",
                    placeholder: "E.g. 32" %>
            </div>

            <!-- Weight -->
            <div class="mb-3">
              <%= f.label :weight, "Weight (kg)", class: "form-label" %>
              <%= f.number_field :weight,
                    class: "form-control",
                    placeholder: "E.g. 68" %>
            </div>

            <!-- Gender (boolean: true = male, false = female) -->
          <div class="mb-3">
            <%= f.label :gender, "Gender", class: "form-label d-block" %>

            <div class="form-check form-check-inline">
              <%= f.radio_button :gender, true,
                    id: "user_gender_male",
                    class: "form-check-input" %>
              <%= label_tag "user_gender_male", "Male", class: "form-check-label" %>
            </div>

            <div class="form-check form-check-inline">
              <%= f.radio_button :gender, false,
                    id: "user_gender_female",
                    class: "form-check-input" %>
              <%= label_tag "user_gender_female", "Female", class: "form-check-label" %>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Save settings", class: "btn btn-primary w-100" %>
          </div>

          <!-- System prompt is taken out of the form, we update this backend -->

        <% end %>

      </div>
    </div>
  </div>
</div>
