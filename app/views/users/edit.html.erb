<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-center">Edit your settings</h2>

        <%= form_with model: @user, url: "/settings", method: :patch do |f| %>

          <!-- Appliances as checkboxes -->
          <div class="mb-3">
            <%= f.label :appliances, "Available appliances", class: "form-label d-block" %>

            <% appliance_options = {
                 "stove"          => "Stove",
                 "oven"           => "Oven",
                 "microwave"      => "Microwave",
                 "pan"            => "Pan",
                 "kettle"         => "Kettle",
                 "fryer"          => "Fryer",
                 "food_processor" => "Food processor"
               } %>

            <% selected_appliances =
                 if @user.appliances.is_a?(Array)
                   @user.appliances.map(&:to_s)
                 elsif @user.appliances.present?
                   @user.appliances.to_s.split(",").map(&:strip)
                 else
                   []
                 end %>

            <% appliance_options.each do |value, label_text| %>
              <div class="form-check form-check-inline">
                <%= check_box_tag "user[appliances][]",
                                  value,
                                  selected_appliances.include?(value),
                                  id: "user_appliances_#{value}",
                                  class: "form-check-input" %>
                <%= label_tag "user_appliances_#{value}",
                              label_text,
                              class: "form-check-label" %>
              </div>
            <% end %>
          </div>

          <!-- Allergies as checkboxes -->
          <div class="mb-3">
            <%= f.label :allergies, "Allergies", class: "form-label d-block" %>

            <% allergy_options = %w[gluten lactose crustaceans nuts egg] %>
            <% selected_allergies =
                 if @user.allergies.is_a?(Array)
                   @user.allergies.map(&:to_s)
                 elsif @user.allergies.present?
                   @user.allergies.to_s.split(",").map(&:strip)
                 else
                   []
                 end %>

            <% allergy_options.each do |allergy| %>
              <div class="form-check form-check-inline">
                <%= check_box_tag "user[allergies][]",
                                  allergy,
                                  selected_allergies.include?(allergy),
                                  id: "user_allergies_#{allergy}",
                                  class: "form-check-input" %>
                <%= label_tag "user_allergies_#{allergy}",
                              allergy.capitalize,
                              class: "form-check-label" %>
              </div>
            <% end %>
          </div>

          <!-- Preferences -->
          <div class="mb-3">
            <%= f.label :preferences, class: "form-label" %>
            <%= f.text_area :preferences,
                            rows: 3,
                            class: "form-control",
                            placeholder: "Example: I want to always use sweetener instead of cane sugar.." %>
          </div>

          <!-- Physicals (age, weight, gender) -->
          <h5 class="mt-4 mb-2">Physical Information</h5>

          <% physicals_hash =
               if @user.physicals.is_a?(Hash)
                 @user.physicals
               else
                 {}
               end %>

          <!-- Age -->
          <div class="mb-3">
            <%= label_tag "user[physicals][age]", "Age", class: "form-label" %>
            <%= text_field_tag "user[physicals][age]",
                  physicals_hash["age"],
                  class: "form-control",
                  placeholder: "E.g. 32" %>
          </div>

          <!-- Weight -->
          <div class="mb-3">
            <%= label_tag "user[physicals][weight]", "Weight (kg)", class: "form-label" %>
            <%= text_field_tag "user[physicals][weight]",
                  physicals_hash["weight"],
                  class: "form-control",
                  placeholder: "E.g. 68" %>
          </div>

          <!-- Gender -->
          <div class="mb-3">
            <%= label_tag "user[physicals][gender]", "Gender", class: "form-label d-block" %>

            <div class="form-check form-check-inline">
              <%= radio_button_tag "user[physicals][gender]", "male",
                    physicals_hash["gender"] == "male",
                    class: "form-check-input",
                    id: "physicals_gender_male" %>
              <%= label_tag "physicals_gender_male", "Male", class: "form-check-label" %>
            </div>

            <div class="form-check form-check-inline">
              <%= radio_button_tag "user[physicals][gender]", "female",
                    physicals_hash["gender"] == "female",
                    class: "form-check-input",
                    id: "physicals_gender_female" %>
              <%= label_tag "physicals_gender_female", "Female", class: "form-check-label" %>
            </div>
          </div>

          <!-- System prompt: updated backend -->

          <div class="text-center">
            <%= f.submit "Save settings", class: "btn btn-primary w-100" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
